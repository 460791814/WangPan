@{
    Layout = null;
}


<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.hbtwd - 网盘搜索,百度云搜索 - hashbt.com</title>
    <meta name="keywords" content="@ViewBag.hbtwd,@ViewBag.hbtwd网盘,@ViewBag.hbtwd下载,@ViewBag.hbtwd百度云,@ViewBag.hbtwd百度网盘,bt,bt下载,bt天堂" />
    <meta name="description" content="hashbt是一个聚合BT资源,网盘资源的网站，在这里您可以很方便的查找您要的资源" />
    <link href="/Content/hashbt.css" rel="stylesheet" />
 
    <script>
        function check() {

            var wd = document.getElementById("hbtwd").value;
            var q = document.getElementById("q").value;
            document.getElementById("q").value = q + " " + wd;
        }

    </script>
</head>
<body>
    <div id="header">
        <div class="con">
            <a href="/Search/Search" title="网盘搜索首页">
                <div class="logo png"></div>
            </a>
            <div class="searchbox">
                <form action="/Search/Search" method="get" onsubmit="return check();">
                    <input type="hidden" id="q" name="q" value="site:pan.baidu.com" />
                    <input align="middle" name="hbtwd" class="q" id="hbtwd" value="@ViewBag.hbtwd " autocomplete="off" baidusug="1" x-webkit-speech=x-webkit-speech />
                    <input id="btn" class="btn" align="middle" value="搜一下" type="submit" />
                </form>
            </div>

        </div>
    </div>

    <div id="topnav">
        <span class="nav">
@Html.Raw(ViewBag.GuoNeiWangPan)
         

        </span>
 
    </div>

    <div id="p_main">
        <div id="res" class="res">
            <div id="resinfo">
                @Html.Raw(ViewBag.ResultStatus)
            </div>
            <div id="result">
                @{
                    var temp = ViewData["contentlist"] as List<WangPan.Models.E_Content>;
                    if (temp != null && temp.Count > 0)
                    {
                        for (int i = 0; i < temp.Count; i++)
                        {
                            <div class="g">
                                <h2><a href="@Html.Raw(temp[i].DataHref)" target="_blank" class="s">@Html.Raw(temp[i].title)</a></h2>
                                <div class="std">
                                    @Html.Raw(temp[i].Intro)
                                </div>
                                <span class="a"> @Html.Raw(temp[i].Cite)</span>
                            </div>
                        }

                    }
                    else
                    {
                        <div style="padding:50px 10px;line-height:35px;color:#444444; font-size:18px;">没有找到相关网盘资源，请更换关键词搜索，或刷新本页重试。</div>
                    }
                }
            </div>

            <div class="cl"></div>
            <div id="sopage">

                @Html.Raw(ViewBag.pageHtml)
            </div>

            <div class="cl10"></div>
            <div class="pagead">
            </div>
        </div>



    </div>


    <div id="footer" style=" float: left; padding-left: 121px;">
        &nbsp;&nbsp;&nbsp;&nbsp;闽ICP备14011459
    </div>
</body>
</html>
